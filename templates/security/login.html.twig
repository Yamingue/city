{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="ui container">
    {% if error %}
    <div class="ui error message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="ui warning message">
        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% endif %}
    <form method="post" class='ui small form'>

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div class="field">
            <label for="inputUsername">Username</label>
            <div class="ui left icon input">

                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                required autofocus>
                <i class="user icon"></i>
            </div>
        </div>
        <div class="field">
            <label for="inputPassword">Password</label>
            <div class="ui left icon input">
                <input type="password" name="password" id="inputPassword" class="form-control" required>
                <i class="key icon"></i>
            </div>
        </div>

        <button style="margin-top: 10px;"  class="ui positive submit button" type="submit"><i class="sign in alternate icon"></i>Connexion</button>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

    </form>

    <div class="ui message aligned center aligned grid">
        Pas de Compte? <a href="{{ path('app_register') }}">Cr√©er un</a>
      </div>
</div>

{% endblock %}