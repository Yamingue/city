{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

   <div class="ui container">
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.tel) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="ui button primary"><i class="icon save"></i> Register</button>
    {{ form_end(registrationForm) }}

    <div class="ui message aligned center aligned grid">
        Déjà un Compte? <a href="{{ path('app_login') }}">se connecter</a>
      </div>
   </div>
{% endblock %}
